<div class="container-fluid">
  <div class="row">
    <div class="col-md-6">
      <h3 id="score"></h3>
    </div>
  </div>
  <div class="row">
    <div class="col-md-6">

      <div class="row">
	<div class="col-md-12">
	  <svg class="ttable" id="tiles"></svg>
	</div>
      </div>

      <div class="row">
	<div class="col-md-12">
	  <div class="tutor" id="hint"></div>
	</div>
      </div>
      
    </div>
    <div class="col-md-6">
      <div class="row">
	<form>
	  <fieldset class="form-group">
	    <label for="command">Command</label>
	    <input type="text" class="form-control" id="command" placeholder="Enter command">
	  </fieldset>
	  <button id="cmd_button" type="button" class="btn btn-default">Command</button>
	  <button id="undo_button" type="button" class="btn btn-default">Undo</button>
	  </form>
      </div>
      <div class="row">
	<button id="done" type="button" class="btn btn-default">Done</button>
	<button id="new_move" type="button" class="btn btn-default">New move</button>
	<button id="pick" type="button" class="btn btn-default">Pick</button>
	<button id="activate" type="button" class="btn btn-default">Activate</button>
	<button id="do_nothing" type="button" class="btn btn-default">Skip new move</button>	
      </div>
    </div>
   </div>
  <div class="row footer ">
    <a href="/rules.pdf">Rules</a>
  </div>

        
      
      

